{% extends 'startingmenulayout.html.twig' %}
{% block content %}
    <!DOCTYPE html>
    <html lang="en">
<head>
    <title> Secure Web Application </title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<div id="Introduction">
    <p> Welcome to our Telemetry Data Processing site.</p>
    <p> Please select from the many options in the navigation bar to use this platform's features</p>
</div>
<div id="page-content-div">
    <form action="{{ action }}" method="{{ method }}">
        <fieldset>
            <p>
                <label for="email" class="sr-only">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Email"
                       required="" maxlength="255" autofocus="">
            </p>
            <p>
                <label for="password" class="sr-only">Password</label>
                <input type="password" id="password" name="password" class="form-control" placeholder="Password"
                       required="" maxlength="255">
            </p>
            <br>
            <input type="submit" value="Log-in">
            <input type="reset" value="Clear">
        </fieldset>
    </form>
</div>
{% endblock %}